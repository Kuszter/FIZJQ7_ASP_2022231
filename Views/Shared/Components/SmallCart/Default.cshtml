@model SmallCartViewModel

@if (Model != null)
{
        <p>Kosár tartalma: <span class="badge badge-primary">@Model.NumberOfItems</span></p>
        <p>Végösszeg: <b>@Model.TotalAmount.ToString("C2")</b></p>
        <a class="btn btn-primary" asp-controller="Cart" asp-action="Index">Kosár megtekintése</a>
        <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Kosár ürítése</a>
}
else
{
        <p class="lead m-0">Üres a kosara</p>
}


